{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@hooks/*": ["src/hooks/*"],
			"@gql/*": ["src/gql/*"],
			"@context/*": ["src/context/*"]
		},
		"jsx": "react-jsx"
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
